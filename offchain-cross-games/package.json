{
  "name": "nwl-offchain-cross-games",
  "version": "1.6.3",
  "private": true,
  "license": "UNLICENSED",
  "type": "commonjs",
  "scripts": {
    "build": "node src/build.mjs",
    "postinstall": "prisma generate",
    "prisma:resetDb:dev": "cross-env DATABASE_URL=$npm_package_config_db_url prisma migrate reset --force",
    "prisma:studio:dev": "cross-env DATABASE_URL=$npm_package_config_db_url prisma studio",
    "prisma:updateDb:dev": "cross-env DATABASE_URL=$npm_package_config_db_url prisma db push && cross-env DATABASE_URL=$npm_package_config_db_url prisma migrate dev",
    "service:bts:dev": "pnpm build && cross-env DATABASE_URL=$npm_package_config_db_url node dist/bts/index.js",
    "service:data:dev": "pnpm build && cross-env DATABASE_URL=$npm_package_config_db_url node dist/data/index.js",
    "service:scraper:dev": "pnpm build && cross-env DATABASE_URL=$npm_package_config_db_url node dist/scraper/index.js",
    "service:server:dev": "pnpm build && cross-env DATABASE_URL=$npm_package_config_db_url node dist/server/index.js",
    "sort": "sort-package-json"
  },
  "config": {
    "db_url": "postgresql://root@127.0.0.1:26257/nightworkers?schema=nw-chips-bank&sslmode=disable"
  },
  "dependencies": {
    "@ethersproject/abstract-provider": "^5.7.0",
    "@fastify/cors": "^8.1.0",
    "@fastify/rate-limit": "^7.4.0",
    "@prisma/client": "^6.1.0",
    "@types/death": "^1.1.2",
    "@types/fs-extra": "^11.0.4",
    "chalk": "^4",
    "death": "^1.1.0",
    "dotenv": "^16.0.3",
    "env-var": "^7.3.0",
    "ethers": "^5.7.1",
    "fastify": "^4.6.0",
    "fs-extra": "^10.1.0",
    "json-schema-to-ts": "^3.1.1",
    "rxjs": "7.5.5",
    "typed-emitter": "^2.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "cross-env": "^7.0.3",
    "dpdm-fast": "^1.0.7",
    "esbuild": "^0.24.2",
    "esbuild-node-externals": "^1.16.0",
    "esbuild-plugin-copy": "^2.1.1",
    "eslint": "^9.17.0",
    "eslint-config-love": "^113.0.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-n": "^17.15.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^7.2.1",
    "globals": "^15.14.0",
    "prisma": "^6.1.0",
    "sort-package-json": "^3",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.2"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=22"
  }
}
